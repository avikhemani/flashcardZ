<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="avi.stanford.kmoney.flashcardz.MainMenuActivity">

    <TextView
            android:text="FlashcardZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_label" android:textSize="60sp"
            android:textStyle="bold|italic" android:textAllCaps="false"
            android:textColor="@android:color/background_dark" android:typeface="normal"
            app:fontFamily="casual" android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <Button
            android:text="Study Cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/studycards_button"
            android:textStyle="italic" android:textSize="30sp" android:textAllCaps="false"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/title_label"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:onClick="studyCards"/>
    <Button
            android:text="Create Cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createcards_button"
            android:textStyle="italic" android:textSize="30sp" android:textAllCaps="false"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/studycards_button"
            android:onClick="createCards"/>
    <TextView
            android:text="Random Quote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/quote_label" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false" android:textStyle="italic"/>
</android.support.constraint.ConstraintLayout>